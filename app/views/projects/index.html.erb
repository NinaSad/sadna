<div class="container">
  <div class="row">
    <div class="col-md-2">
      <center><h2 class="page-header">Projects</h2></center>
      <table>
        <thead>
        <tr>
          <th hidden="hidden">Name</th>
          <th hidden="hidden">Priority</th>
          <th hidden="hidden">Start date</th>
          <th hidden="hidden">Due date</th>
          <th hidden="hidden">Created at </th>
          <th hidden="hidden">Update</th>
        </tr>
        </thead>

        <tbody>
        <% @projects.each do |project| %>
            <tr class="shap">
              <td>
                <%= link_to project.name, tasks_path(:project_id => project.id) %>

                <div class="progress">
                  <div class="progress-bar progress-bar-success " role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: 40%;" >
                    <%= project.projectProgress %>
                  </div>
                </div>

              </td>
              <td hidden="hidden"><%= project.start_date %></td>
              <td hidden="hidden"><%= project.due_date %></td>
              <td hidden="hidden"><%= link_to 'Show', project %></td>
              <td class="admin"><%= link_to 'Edit|', edit_project_path(project) %></td>
              <td class="admin"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
        <% end %>
        </tbody>
      </table>


    </div>
    <div class="col-md-10">
      <center><h2 class="page-header">My Tasks</h2></center>
      <%= render 'tasks/task_table' %>
    </div>

  </div>

  <div class="project_btns">
    <%= link_to 'New Project', new_project_path,:class =>"btn btn-lg btn-primary"%>
    <%= link_to 'All Tasks', tasks_path,:class =>"btn btn-lg btn-default" %>
  </div>

</div>