<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @task.title %>
</p>

<p>
  <strong>Priority:</strong>
  <%= @task.priority %>
</p>

<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>

<p>
  <strong>Project Name:</strong>
  <%= @task.project.projectName %>
</p>

<p>
  <strong>Project Id:</strong>
  <%= @task.project_id %>
</p>

<p>
  <strong>Assignee:</strong>
  <%= @task.doer.full_name %>
</p>

<p>
  <strong>Status:</strong>
  <%= @task.status %>
</p>

<p>
  <strong>Due date:</strong>
  <%= @task.due_date %>
</p>

<p>
  <strong>Created by:</strong>
  <%= @task.user.full_name %>
</p>

<% if @task.doc %>
    <p>
      <strong>Document:</strong>
      <%= link_to @task.doc, "/uploads/#{@task.doc_id}", :target => "_blank" %>
    </p>
<% end %>

<%= link_to :back, :class =>"btn btn-lg btn-default task_btns" do %>
    <i class="glyphicon glyphicon-arrow-left icons"></i> Back
<% end %>
<%= link_to edit_task_path(@task), :class =>"btn btn-lg btn-default task_btns" do %>
    <i class="glyphicon glyphicon-edit icons"></i> Edit
<% end %>
<%= link_to @task, method: :delete, data: { confirm: 'Are you sure?' },:class =>"btn btn-lg btn-default task_btns" do %>
    <i class="glyphicon glyphicon-trash icons"></i> Destroy
<% end %>