
    <%= form_for(@task) do |f| %>
      <% if @task.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

          <ul>
          <% @task.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %><br>
        <textarea type="text" name="task[title]" class="form-control" required autofocus><%= @task.title %></textarea>
      </div>
      <div class="field" class="width-size2">
        <%= f.label :priority %><br>
        <select name="task[priority]" class="form-control"  >
          <option value="ASAP">ASAP</option>
          <option value="Medium">Medium</option>
          <option value="Take your time">Take your time</option>
        </select>

      </div>
      <div class="field">
        <%= f.label :description %><br>

        <textarea type="text" name="task[description]" class="form-control" required></textarea>
      </div>

        <div class="field">
          <%= f.label :project_name %><br>
          <select name="task[project_name]" class="form-control">
            <option value="IT-SystemNt">IT-SystemNt</option>
            <option value="IT-Storage">IT-Storage</option>
            <option value="IT-Opreting">IT-Opreting</option>
            <option value="IT-Tiful">IT-Tiful</option>
          </select>
         <!-- <textarea type="text" name="task[project_name]" class="form-control" required></textarea>-->
        </div>

        <div class="field">
          <%= f.label :assignee %><br>
          <%= collection_select(:task, :assignee, User.all, :id, :full_name) %>

        </div>

      <div class="field">
        <%= f.label :status %><br>
        <select name="task[status]" class="form-control">
          <option value="TODO">TODO</option>
          <option value="DOING">DOING</option>
          <option value="DONE">DONE</option>
        </select>

      </div>
      <div class="field">
        <%= f.label :due_date %><br>
        <%= f.date_select :due_date %>
      </div >
       <div class="field">
         <label>Created by</label><br>

         <%= collection_select(:task, :user_id, User.all, :id, :full_name) %>

       </div>
      <div class="actions">
        <p>
          <%= f.submit(:class=>"btn btn-lg btn-primary",:href=>"../../components/#navbar" ,:role => "button") %>

        </p>
      </div>
    <% end %>
